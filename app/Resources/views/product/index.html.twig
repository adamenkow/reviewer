{% extends 'base.html.twig' %}

    {% block title %}Lista produktów{% endblock %}

{% block body %}

	<ul class="list-inline">
		<li><a href="{{ path('app_default_index') }}" class="btn btn-primary top-btn">Wróć do strony głównej</a></li>
		<li><button class="btn btn-danger top-btn" data-toggle="modal" data-target="#myModal">Wyczyść baze danych</a>
        </li>
		
	</ul>
	<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Score</th>
                <th>Shops</th>
                <th>Votes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><a href="{{ path('database_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                <td><img src="{{ product.image }}"></td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.category }}</td>
                <td>{{ product.score }}</td>
                <td>{{ product.shops }}</td>
                <td>{{ product.votes }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('database_show', { 'id': product.id }) }}" class="btn btn-info action-btn">show</a>
                        </li>
                        <li>
                            <a href="{{ path('database_edit', { 'id': product.id }) }}" class="btn btn-danger action-btn">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
	</div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Wymagana autoryzacja</h4>
                </div>
                <form methord="get" action="{{ path('database_delete') }}" role="form" class="form-inline">
                    <div class="modal-body">
                            <div class="form-group">
                                <label>Podaj hasło</label>
                                <input name="pass" class="form-control" type="password" />
                            </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Anuluj</button>
                        <button type="submit" class="btn btn-primary" >Potwierdź</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endblock %}
