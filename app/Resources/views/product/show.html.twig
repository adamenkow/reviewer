{% extends 'base.html.twig' %}

{% block title %}
    Produkt - {{ product.name }}
{% endblock %}
{% block body %}

<div class="container">
    <table class="table table-striped table-bordered show-tab">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ product.category }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ product.score }}</td>
            </tr>
            <tr>
                <th>Shops</th>
                <td>{{ product.shops }}</td>
            </tr>
            <tr>
                <th>Votes</th>
                <td>{{ product.votes }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Keys</th>
                <td>{{ product.keys }}</td>
            </tr>
            <tr>
                <th>Vars</th>
                <td>{{ product.vars }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td><ul class="list-group">

                    {% for image in product.images %}
                       <li>
                           {{ image }}
                       </li>
                    {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Reviews</th>
                <td><ul class="list-group">

                    {% for review in product.reviews %}
                       <li>
                           {{ review.source }}
                           <br/>
                           {{ review.body }}
                       </li>
                    {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <ul class="list-inline">
        <li>
            <a href="{{ path('database_index') }}" class="btn btn-primary action-btn">Lista</a>
        </li>
        {#<li>#}
            {#<a href="{{ path('database_edit', { 'id': product.id }) }}"class="btn btn-info action-btn">Edycja</a>#}
        {#</li>#}
        {#<li>#}
            {#<a href="{{ path('database_delete', { 'id': product.id }) }}" class="btn btn-danger action-btn">Usu≈Ñ</a>#}
        {#</li>#}
    </ul>
    </div>
{% endblock %}
